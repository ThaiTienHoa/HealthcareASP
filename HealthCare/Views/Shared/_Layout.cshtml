<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>HealthCare - @ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/mini-logo.png" rel="icon">

    <!-- Icon Font Stylesheet -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet"> *@

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/lib/twentytwenty/twentytwenty.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" /> *@

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle vw-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow text-dark m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow text-secondary m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid bg-light d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-md-6 mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center">
                    <small class="py-2 px-5"><i class="far fa-clock text-success mr-1"></i>Opening Hours: Mon - Tues : 6.00 am - 10.00 pm, Sunday Closed </small>
                </div>
            </div>
            <div class="col-md-6 pr-0">
                <div class="position-relative float-right d-inline-flex align-items-center bg-success text-white top-shape px-5">
                    <div class="border-right p-2">
                        <p class="m-0"><i class="fa-regular fa-envelope-open mr-1"></i>info@example.com</p>
                    </div>
                    <div class="p-2">
                        <p class="m-0"><i class="fa-solid fa-phone-volume mr-1"></i>+012 345 6789</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm px-5 py-3 py-lg-0">
        <a href="index.html" class="navbar-brand p-0">
            @* <h1 class="m-0 text-success"><i class="fa fa-tooth"></i>DentCare</h1> *@
            <img src="~/logo.png" style="max-width:300px;" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
            <ul class="navbar-nav py-0">
                <li class="nav-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a asp-area ="" asp-controller="Home" asp-action="About" class="nav-link">Về chúng tôi</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Service" class="nav-link">Dịch vụ</a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                    <div class="dropdown-menu m-0">
                        <a href="price.html" class="dropdown-item">Pricing Plan</a>
                        <a href="team.html" class="dropdown-item">Our Dentist</a>
                        <a href="testimonial.html" class="dropdown-item">Testimonial</a>
                        <a href="appointment.html" class="dropdown-item">Appointment</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">Liên hệ</a>
                </li>
            </ul>
            <button type="button" class="btn text-dark" data-toggle="modal" data-target="#searchModal"><i class="fa fa-search"></i></button>

            <partial name="_LoginPartial" />
            @* @Html.ActionLink("Login with fb", "Facebook", "User"); *@
            @* <p>@TempData["name"]</p> *@
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Full Screen Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content" style="background: rgba(9, 30, 62, .7);">
                <div class="modal-header border-0">
                    <button type="button" class="btn bg-white btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center justify-content-center">
                    <div class="input-group" style="max-width: 600px;">
                        <input type="text" class="form-control bg-transparent border-primary p-3" placeholder="Type search keyword">
                        <button class="btn btn-primary px-4"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Full Screen Search End -->

        @RenderBody()   

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light py-5 wow fadeInUp" data-wow-delay="0.3s">
        <div class="container">
            <div class="row g-5 pt-4">
                <div class="col-lg-3 col-md-6">
                    <h3 class="text-white mb-4">Dịch vụ y tế</h3>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-light mb-2" href="#">Home</a>
                        <a class="text-light mb-2" href="#">About Us</a>
                        <a class="text-light mb-2" href="#">Our Services</a>
                        <a class="text-light mb-2" href="#">Latest Blog</a>
                        <a class="text-light" href="#">Contact Us</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3 class="text-white mb-4">Về chúng tôi</h3>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-light mb-2" href="#">Tin tức</a>
                        <a class="text-light mb-2" href="/Home/About">Giới thiệu</a>
                        <a class="text-light mb-2" href="/Home/TermsOfService">Điều khoản dịch vụ</a>
                        <a class="text-light mb-2" href="#">Chính sách bảo mật</a>
                        <a class="text-light" href="#">Hướng dẫn</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3 class="text-white mb-4">Follow Us</h3>
                    <form class="mb-2">
                        <div class="input-group">
                            <input type="text" class="form-control border-white p-3" placeholder="Email của bạn">
                            <!-- Append the following content to the input box -->
                            <div class="input-group-append">
                                <button class="btn btn-sucess px-2">Đăng ký</button>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex">
                        <a class="btn btn-lg btn-light btn-lg-square rounded mr-2" href="#"><i class="fab fa-facebook-f fw-normal"></i></a>
                        <a class="btn btn-lg btn-light btn-lg-square rounded mr-2" href="#"><i class="fab fa-instagram fw-normal"></i></a>
                        <a class="btn btn-lg btn-light btn-lg-square rounded" href="#"><i class="fa-brands fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3 class="text-white mb-4"><img src="~/logo.png" style="max-width: 100%;" /></h3>
                    <p class="mb-2"><i class="fa-solid fa-location-dot mr-1"></i>779, QL50, Bình Chánh, TPHCM</p>
                    <p class="mb-2"><i class="fa-regular fa-envelope-open mr-1"></i>healthcare@gmail.com</p>
                    <p class="mb-0"><i class="fa-solid fa-phone-volume mr-1"></i>+012 345 67890</p>
                </div>                
            </div>
        </div>
    </div>
    <div class="container-fluid text-light py-4" style="background: #051225;">
        <div class="container">
            <div class="row g-0">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-md-0">&copy; <a class="text-white border-bottom" href="#">HealthCare</a>. All Rights Reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">Designed by <a class="text-white border-bottom" href="https://htmlcodex.com">HTML Codex</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-green-light btn-lg-square rounded back-to-top"><i class="fa-solid fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/lib/twentytwenty/jquery.event.move.js"></script>
    <script src="~/lib/twentytwenty/jquery.twentytwenty.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>